<script>
document.querySelectorAll('.count').forEach(el=>{
    let target=+el.innerText;
    el.innerText=0;
    let i=0;
    let timer=setInterval(()=>{
        i++;
        el.innerText=i;
        if(i>=target) clearInterval(timer);
    },20);
});
</script>

